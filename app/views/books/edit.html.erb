<div class="flash">
  <%= flash[:notice] %>
</div>

<h1 class="header-title">Editing Book</h1>

<% if @book.errors.any? %>
  <div class="alert-box">
    <p class="alert"><%= @book.errors.count %>errors prohibited this book from being sabed:</p>
    <ul class="errors-box">
      <div class="list-box">
        <% @book.errors.full_messages.each do |message| %>
          <li class="error-messages"><%= message %></li>
        <% end %>
      </div>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url: book_path, method: :patch do |f| %>
  
  <div class="form">
    <h4 class="form-title">Title</h4>
    <%= f.text_field :title %>
  </div>
  
  <div class="form">
    <h4 class="form-body">Body</h4>
    <%= f.text_area :body %>
  </div>
  
  
  <div class="button">  
    <%= f.submit 'Update Book', class: "btn submit"%>
  </div>
  
<% end %>

<span class="edit-show-link">
  <%= link_to "Show", book_path(@book.id) %>
</span>

<span class="back-link">
  <%= link_to "Back", books_path %>
</span>